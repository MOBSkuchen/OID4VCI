{
  "name": "@sphereon/oidc4vci-client",
  "version": "0.0.1",
  "main": "src/index.ts",
  "license": "Apache-2.0",
  "private": false,
  "scripts": {
    "build": "run-p build:*",
    "build:main": "tsc -p tsconfig.build.json",
    "build:schemaGenerator": "node --loader ts-node/esm generator/schemaGenerator.ts",
    "clean": "rimraf dist coverage",
    "fix": "run-s fix:*",
    "fix:prettier": "prettier \"{src,test}/**/*.ts\" --write",
    "fix:lint": "eslint . --ext .ts --fix",
    "test": "run-s build test:*",
    "test:lint": "eslint . --ext .ts",
    "test:prettier": "prettier \"{src,test}/**/*.ts\" --list-different",
    "test:cov": "jest --ci --coverage && codecov",
    "uninstall": "rimraf dist coverage node_modules"
  },
  "engines": {
    "node": ">=14"
  },
  "dependencies": {
    "bs58": "^5.0.0",
    "uint8arrays": "^3.1.1"
  },
  "devDependencies": {
    "@types/jest": "^29.1.2",
    "@types/node": "^18.8.3",
    "@typescript-eslint/eslint-plugin": "^5.36.1",
    "@typescript-eslint/parser": "^5.36.1",
    "codecov": "^3.8.3",
    "eslint": "^8.23.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.26.0",
    "jest": "^29.1.2",
    "jest-junit": "^14.0.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "typescript": "4.6.4"
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 150
  }
}
